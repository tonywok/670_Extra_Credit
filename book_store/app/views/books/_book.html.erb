<div id="book">
  <img src="/images/book-icon-gif.gif" width="180" height="180" alt="Book Icon Gif">
  <ul class="book">
    <li class="title"><%= book.title + " (ISBN: #{book.isbn})" %></li>
    <li class="author"><%= "by: #{book.authors.first.first_name} #{book.authors.first.last_name}" %></li>
    <li><%= "Published by #{book.publisher} in #{book.year}" %></li>
    <li class="price"><%= "$#{book.price}" %><a id="add_to_cart" href="#">Add to Cart</a></li>
    <li><%= "in stock: #{book.min_required}" %></li>
    <li><%= "Reviews "+ link_to("(#{book.reviews.count})", reviews_path(book)) %>  <a href="#">Add a Review</a></li>
  </ul>
</div>